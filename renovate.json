{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "prHourlyLimit": 4,
  "regexManagers": [
    {
      "fileMatch": [
        "^host-.*.yml$",
        "^host_vars/.*/vars.yml$",
        "^vars.yml$"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "matchStrings": [
        "image: (?<depName>.*?):(?<currentValue>.*?)(@(?<currentDigest>sha256:.*?))?\\s",
        "image: (?<depName>.*?):(?<currentVersion>.*)"
      ],
    "packageRules": [
    {
      "packagePatterns": ["^lscr.io\\/linuxserver\\/"],
      "versionScheme": "regex:^(?!.*(nig(ht|th)ly|develop|development))(?<compatibility>[a-z]*-|v)?(?<major>\d+)\.(?<minor>\d+)\.(?<patch>\d+)(?:[\.-]?(?<build>.*))?$"
    }
  ]
    }
  ]
}
